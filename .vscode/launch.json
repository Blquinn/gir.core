    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Generate",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Build/bin/Debug/netcoreapp3.1/Build.dll",
            "args": [""],
            "cwd": "${workspaceFolder}/Build",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Samples/Gtk/GtkApp/bin/Debug/netcoreapp3.1/GtkApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Samples/Gtk/GtkApp",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}